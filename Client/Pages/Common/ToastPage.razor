@inject ToastService ToastService
<Toast @ref="Toast" Placement="Placement.TopEnd"></Toast>

@code {
    private Toast Toast { get; set; }

    protected void ShowToast(string content, string title)
    {
        ToastService.Show(new ToastOption()
        {
            Host = Toast,
            Category = ToastCategory.Information,
            Title = "消息通知",
            Content = "请选择要删除的数据"
        });
    }

    protected void ShowToast(string content, string title, int delay = 1000)
    {
        ToastService.Show(new ToastOption()
        {
            Delay = delay,
            Host = Toast,
            Category = ToastCategory.Information,
            Title = "消息通知",
            Content = "请选择要删除的数据"
        });
    }
}
